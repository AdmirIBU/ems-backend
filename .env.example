PORT=5000
MONGO_URI=mongodb://mongo:27017/emsdb
JWT_SECRET=jwt_secret
NODE_ENV=development

# ---- Optional: demo data seed
# When enabled, the server will create demo users/courses/exams/questions on startup.
SEED_ON_STARTUP=false

# If true, uses predictable demo credentials
SEED_USE_DEFAULTS=false

# Provide explicit credentials instead of defaults
SEED_ADMIN_EMAIL=
SEED_ADMIN_PASSWORD=
SEED_ADMIN_NAME=
SEED_PROF_EMAIL=
SEED_PROF_PASSWORD=
SEED_PROF_NAME=
SEED_STUDENT_EMAIL=
SEED_STUDENT_PASSWORD=
SEED_STUDENT_NAME=

# Advanced:
# SEED_UPDATE_PASSWORDS=true   # update existing users' passwords
# SEED_FORCE=true              # overwrite seeded attempt if it exists
